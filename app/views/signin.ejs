<!DOCTYPE html>
<html>
<head>
  <!-- Usa la propiedad 'title' para renderizar un título de página  -->
  <title><%= title %></title>
</head>
<body>
  	<h1>Plataforma de consultas médicas e historiales médicos</h1>
    <hr />
    <!-- Mostrar mensajes Flash  -->
  <% for(var i in messages) { %>
     <div class="flash"><%= messages[i] %></div>
  <% } %>

  <!-- Renderizar el formulario signin -->
  <form action="/signin" method="post">
    <div>
      <label>Usuario:</label><br>
      <input type="text" name="username" placeholder="Usuario"/>
    </div>
    <div>
      <label>Contraseña:</label><br>
      <input type="password" name="password" placeholder="Contraseña"/>
    </div>
    <div>
      <input type="submit" value="Identificarse" />
    </div>
  </form>
  <hr />
  <a href="/oauth/google">Identificarse usando Google</a>
  <hr />
</body>
</html>
